{
    "name": "Build Project",
    "on": "push",
    "permissions":{
      "contents":"write" 
    },
    "jobs": {
        "build": {
            "runs-on": "ubuntu-latest",
            "steps": [
                {
                    "uses": "actions/checkout@v4"
                },
                {
                    "uses": "oven-sh/setup-bun@v2",
                    "with": {
                        "bun-version": "latest"
                    }
                },
                {
                    "run": "bun install"
                },
                {
                    "run": "bun run build"
                },
                {
                    "run": "bun run buildZip"
                },
                {
                    "uses": "softprops/action-gh-release@v2",
                    "if":"startsWith(github.ref, 'refs/tags/')",
                    "with":{
                        "body":"自动打包",
                        "files":"./www.zip"
                    }
                },
                {
                    "run": "echo \"ok\""
                }
            ]
        }
    }
}