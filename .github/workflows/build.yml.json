{
    "name": "Build Project",
    "on": "push",
    "permissions":{
      "contents":"write" 
    },
    "jobs": {
        "build": {
            "runs-on": "ubuntu-latest",
            "steps": [
                {
                    "uses": "actions/checkout@v4"
                },
                {
                    "uses": "oven-sh/setup-bun@v2",
                    "with": {
                        "bun-version": "latest"
                    }
                },
                {
                    "run": "bun install"
                },
                {
                    "run": "bun run build"
                },
                {
                    "run": "bun run buildZip"
                },
                {
                    "name":"打包linux-x64可执行程序",
                    "run": "bun build --compile --minify  script/build-exe.js --outfile main-linux-x64 --target=bun-linux-x64"
                },
                {
                    "name":"打包linux-arm64可执行程序",
                    "run": "bun build --compile --minify  script/build-exe.js --outfile main-linux-arm64 --target=bun-linux-arm64"
                },
                {
                    "name":"打包windows-x64可执行程序",
                    "run": "bun build --compile --minify  script/build-exe.js --outfile main-linux-arm64 --target=bun-windows-x64"
                },
                {
                    "run": "ls ."
                },
                {
                    "uses": "softprops/action-gh-release@v2",
                    "if":"startsWith(github.ref, 'refs/tags/')",
                    "with":{
                        "body":"自动打包",
                        "files":"./www.zip"
                    }
                },
                {
                    "run": "echo \"ok\""
                }
            ]
        }
    }
}